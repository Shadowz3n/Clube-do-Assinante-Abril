<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.admancriativa.clubeapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Clube do Assinante Abril</name>
    <description>
		Aplicativo do Clube do Assinante Abril
    </description>
    <author email="atendimento@admancriativa.com.br" href="https://www.admancriativa.com.br">
        Adman Criativa
    </author>
    <icon src="icon.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="gray" />
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
